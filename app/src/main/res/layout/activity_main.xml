<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhiyuan3g.mynofication.MainActivity">

    <Button
        android:textSize="20sp"
        android:id="@+id/btnNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通通知栏" />
    <Button
        android:textSize="20sp"
        android:id="@+id/btnNoficationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模拟下载通知栏" />
    <Button
        android:textSize="20sp"
        android:id="@+id/btnBigPictureStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大布局BigPictureStyle" />
    <Button
        android:textSize="20sp"
        android:id="@+id/btnBigTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大布局BigTextStyle" />
    <Button
        android:textSize="20sp"
        android:id="@+id/btnInboxStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大布局InboxStyle" />
</LinearLayout>
